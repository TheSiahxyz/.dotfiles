export WORKON_HOME="$XDG_DATA_HOME/venvs"

### --- VISUAL STUDIO CODE --- ###
export VSCODE_PORTABLE="$XDG_DATA_HOME/vscode"

### --- WGET --- ###
export WGETRC="$XDG_CONFIG_HOME/wget/wgetrc"

### --- ZSH --- ###
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
