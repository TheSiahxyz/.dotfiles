#!/bin/sh

# Some optional functions in THESIAH require programs not installed by default. I
# use this little script to check to see if a command exists and if it doesn't
# it informs the user that they need that command to continue. This is used in
# various other scripts for clarity's sake.

for x in "$@"; do
  if ! command -v "$x" >/dev/null 2>&1 &&
    ! brew list --formula "$x" >/dev/null 2>&1 &&
    ! brew list --cask "$x" >/dev/null 2>&1; then
    osascript -e 'display notification "'"$x"' must be installed for this function." with title "ðŸ“¦ Dependency missing"'
    exit 1
  fi
done
