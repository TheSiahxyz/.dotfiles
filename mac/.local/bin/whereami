#!/bin/sh

arch=$(uname -m)
os_type=$(uname | tr '[:upper:]' '[:lower:]')

case "${os_type},${arch}" in
"linux,arm" | "linux,arm64" | "linux,x86_64")
  [ -f /etc/os-release ] &&
    grep PRETTY_NAME /etc/os-release | cut -d'=' -f2- | sed 's/"//g' | awk -F' ' '{print $1}' | tr '[:upper:]' '[:lower:]' | sed 's/\(arch\|artix\)/ar/g'
  ;;
"darwin,arm64")
  echo "mac"
  ;;
"darwin,x86_64")
  echo "intel mac"
  ;;
"msys,"* | "cygwin,"* | "windows,"*)
  echo "windows"
  ;;
*)
  echo "Unsupported OS"
  exit
  ;;
esac
