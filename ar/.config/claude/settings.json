{
  "permissions": {
    "deny": [
      "Bash(rm -rf:*)",
      "Read(**/*.gpg)",
      "Read(**/.gnupg/**/*)",
      "Read(**/.password-store/**/*)",
      "Write(**/*.gpg)",
      "Write(**/.gnupg/**/*)",
      "Write(**/.password-store/**/*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send -u critical -i dialog-warning 'ðŸ¤– Claude Code' 'Permission confirmation required'",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send -i dialog-question 'ðŸ¤– Claude Code' 'Waiting for input'",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$CLAUDE_CONFIG_DIR/statuslines/statusline.sh"
  }
}
