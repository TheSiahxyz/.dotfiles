#!/bin/sh

status=$(transmission-remote -l | grep % |
  sed " # The letters are for sorting and will not appear
	s/.*Stopped.*/A ðŸ›‘/;
	s/.*Seeding.*/Z ðŸŒ±/;
	s/.*100%.*/N âœ…/;
	s/.*Idle.*/B ðŸ•°ï¸/;
	s/.*Uploading.*/L ðŸ”¼/;
	s/.*%.*/M ðŸ”½/" |
  sort -h | uniq -c | awk '{print $3 $1}' | paste -sd ' ' -)

if [ -z "$status" ]; then
  echo "$status"
else
  pidof transmission-daemon >/dev/null && echo "ðŸŒ²"
fi

case $BLOCK_BUTTON in
1) setsid -f "$TERMINAL" -e stig ;;
2) td-toggle ;;
3) notify-send "ðŸŒ± Torrent module" "\- Left click to open stig
- Middle click to toggle transmission
- Shift click to edit script
Module shows number of torrents:
ðŸ›‘: paused
ðŸ•°: idle (seeds needed)
ðŸ”¼: uploading (unfinished)
ðŸ”½: downloading
âœ…: done
ðŸŒ±: done and seeding" ;;
6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
